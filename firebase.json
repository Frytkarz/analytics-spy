{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "predeploy": [
            "npm --prefix \"functions\" run build"
        ]
    },
    "hosting": {
        "public": "hosting/dist/am-f2p",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "predeploy": [
            "npm --prefix \"hosting\" run build --prod"
        ],
        "rewrites": [
            {
                "source": "/public/**",
                "destination": "/public.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}